---
export interface ProjectFrontmatter {
  title: string;
  description: string;
  image: string;
  href: string;
  tags: string[];
  highlight?: string;
  date?: string | Date;
  readTime?: string;
}
// Items come from Astro.glob('../content/projects/*.mdx')
const { items, lang = 'en' } = Astro.props as { items: Array<{ url?: string; frontmatter: ProjectFrontmatter }>; lang?: 'en' | 'pt' };

const locale = lang === 'pt' ? 'pt-BR' : 'en-US';
const formatDate = (d: string | Date | undefined) => {
  const dt = d ? new Date(d) : new Date('2025-12-01');
  if (Number.isNaN(dt.getTime())) return String(d);
  return dt.toLocaleDateString(locale, { day: 'numeric', month: 'short', year: 'numeric' });
};
---
<section id="projects" class="max-w-6xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
  <div class="flex items-end justify-between gap-6 mb-6">
    <div>
      <h2 class="text-2xl font-semibold tracking-tight">{lang === 'en' ? 'Projects' : 'Projetos'}</h2>
      <p class="text-sm text-slate-600 dark:text-slate-300">{lang === 'en' ? 'Case studies and experiments.' : 'Estudos de caso e experimentos.'}</p>
    </div>
  </div>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {items.map((p) => (
      <a href={p.frontmatter.href} target="_blank" class="group block rounded-xl border border-slate-200 dark:border-slate-800 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 overflow-hidden hover:border-[--color-accent-300] hover:shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)] transition">
        <div class="aspect-video bg-slate-200 dark:bg-slate-700 overflow-hidden">
          <img
            src={p.frontmatter.image}
            alt=""
            class="h-full w-full object-cover group-hover:scale-[1.03] transition"
            loading="lazy"
            decoding="async"
            referrerpolicy="no-referrer"
            onerror="this.onerror=null;this.src='https://images.unsplash.com/photo-1522199755839-a2bacb67c546?q=80&w=1200&auto=format&fit=crop';"
          />
        </div>
        <div class="p-4 space-y-2">
          <div class="flex items-center gap-3 text-xs text-slate-500 dark:text-slate-400">
            <span class="inline-flex items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect x="3" y="4" width="18" height="17" rx="2"/>
                <path d="M8 2v4M16 2v4M3 9h18"/>
              </svg>
              <span>{formatDate(p.frontmatter.date)}</span>
            </span>
            <span class="h-3 w-px bg-slate-300/70 dark:bg-slate-700/70"></span>
            <span class="inline-flex items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <circle cx="12" cy="12" r="9"/>
                <path d="M12 7v5l3 2"/>
              </svg>
              <span>{p.frontmatter.readTime ?? '8 min read'}</span>
            </span>
          </div>
          <div class="flex items-center gap-3">
            <h3 class="font-semibold">{p.frontmatter.title}</h3>
          </div>
          <p class="text-sm text-slate-600 dark:text-slate-300 line-clamp-2">{p.frontmatter.description}</p>
          <div class="flex flex-wrap gap-2 pt-1">
            {p.frontmatter.tags.map((t) => (
              <span class="text-xs px-2.5 py-1 rounded-full bg-slate-200 text-slate-800 border border-slate-300 dark:bg-slate-700 dark:text-slate-100 dark:border-slate-600">
                {t}
              </span>
            ))}
          </div>
        </div>
      </a>
    ))}
  </div>
</section>
