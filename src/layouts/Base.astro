---
import '../styles/global.css';
export interface Props {
  title?: string;
  description?: string;
  lang?: 'en' | 'pt';
}
const { title = 'Developer Portfolio', description = 'Projects and articles', lang = 'en' } = Astro.props as Props;
const GA_ID = 'G-M0VXJ6HXT1';
const IS_PROD = import.meta.env.PROD;
const ENABLE_GA = GA_ID && IS_PROD;
---
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og.svg" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
      :root { --font: Heebo, Helvetica, Arial, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto; }
      body { font-family: var(--font); }
    </style>
    {ENABLE_GA && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
        <script>
          {`
            window.dataLayer = window.dataLayer || [];
            window.gtag = window.gtag || function() {
              window.dataLayer.push(arguments);
            };
            window.gtag('js', new Date());
            window.gtag('config', 'G-M0VXJ6HXT1');
            window.analyticsTrack = function(eventName, params) {
              try {
                window.gtag('event', eventName, params || {});
              } catch (e) {}
            };
          `}
        </script>
      </>
    )}
    <script>
      // Initialize theme early (avoids flash)
      (() => {
        try {
          const stored = localStorage.getItem('theme');
          const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
          const enableDark = stored ? stored === 'dark' : prefersDark;
          document.documentElement.classList.toggle('dark', enableDark);
          document.documentElement.dataset.theme = enableDark ? 'dark' : 'light';
        } catch {}
      })();
    </script>
  </head>
  <body class="bg-white text-slate-900 dark:bg-slate-950 dark:text-slate-50">
    <slot />
    <button
      id="theme-toggle"
      class="fixed bottom-4 right-4 z-50 h-10 w-10 grid place-items-center rounded-full border border-slate-300 dark:border-slate-700 bg-white/90 dark:bg-slate-800/90 backdrop-blur text-slate-700 dark:text-slate-200 shadow-sm hover:shadow transition"
      aria-label="Toggle dark mode"
      title="Toggle dark mode"
    >
      <span class="sr-only">Toggle dark mode</span>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M12 3a9 9 0 1 0 9 9c0-.34-.02-.67-.06-1A7 7 0 0 1 13 3.06 9.1 9.1 0 0 0 12 3z" />
      </svg>
    </button>
    <script>
      (function(){
        const btn = document.getElementById('theme-toggle');
        if (!btn) return;
        btn.addEventListener('click', () => {
          const isDark = document.documentElement.classList.toggle('dark');
          const mode = isDark ? 'dark' : 'light';
          document.documentElement.dataset.theme = mode;
          try { localStorage.setItem('theme', mode); } catch {}
          try {
            var tracker = (window && window.analyticsTrack) || null;
            if (typeof tracker === 'function') {
              tracker('theme_toggle', { mode: mode });
            }
          } catch (e) {}
        });
      })();
    </script>
    <script>
      {`
        (function(){
          window.analyticsTrack = window.analyticsTrack || function(){};
          document.addEventListener('click', function(event) {
            var target = event.target;
            if (!target || !(target instanceof Element)) return;
            var el = target.closest('[data-analytics-event]');
            if (!el) return;
            var eventName = el.getAttribute('data-analytics-event');
            if (!eventName || typeof window.analyticsTrack !== 'function') return;
            var paramsRaw = el.getAttribute('data-analytics-params');
            var params = {};
            if (paramsRaw) {
              try { params = JSON.parse(paramsRaw); } catch (e) {}
            }
            window.analyticsTrack(eventName, params);
          }, true);
        })();
      `}
    </script>
  </body>
</html>
