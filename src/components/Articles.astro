---
export interface ArticleFrontmatter {
  title: string;
  description: string;
  image: string;
  href: string;
  tags: string[];
  date: string | Date;
}
const { items, lang = 'en' } = Astro.props as { items: Array<{ url?: string; frontmatter: ArticleFrontmatter }>; lang?: 'en' | 'pt' };
---
<section id="articles" class="max-w-6xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
  <div class="flex items-end justify-between gap-6 mb-6">
    <div>
      <h2 class="text-2xl font-semibold tracking-tight">{lang === 'en' ? 'Articles' : 'Artigos'}</h2>
      <p class="text-sm text-slate-600 dark:text-slate-300">{lang === 'en' ? 'Writing on dev, architecture, and tooling.' : 'Textos sobre dev, arquitetura e ferramentas.'}</p>
    </div>
  </div>
  <div class="space-y-4">
    {items.map((a) => (
      <a href={a.frontmatter.href} target="_blank" class="block p-4 rounded-xl border border-slate-200 dark:border-slate-800 hover:bg-slate-50 dark:hover:bg-slate-900 hover:border-[--color-accent-300] transition">
        <div class="flex items-start gap-4">
          <img src={a.frontmatter.image} alt="" class="h-20 w-28 rounded-lg object-cover border border-slate-200 dark:border-slate-800" />
          <div class="flex-1">
            <div class="flex items-center justify-between gap-3">
              <h3 class="font-semibold">{a.frontmatter.title}</h3>
              <span class="text-xs text-slate-500">{a.frontmatter.date}</span>
            </div>
            <p class="text-sm text-slate-600 dark:text-slate-300 line-clamp-2">{a.frontmatter.description}</p>
            <div class="flex flex-wrap gap-2 pt-1">
              {a.frontmatter.tags.map((t) => (
                <span class="text-xs px-2 py-1 rounded-md bg-slate-100 dark:bg-slate-800 border border-slate-200 dark:border-slate-700">{t}</span>
              ))}
            </div>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>
