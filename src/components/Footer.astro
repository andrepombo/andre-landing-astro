  <div class="flex items-center justify-between">
    <span>&copy; {year} Andr√© Pombo.</span>
    <div class="flex items-center gap-3">
      <a href={links.github} class="hover:text-[--color-accent-600]">GitHub</a>
      <a href={links.x} class="hover:text-[--color-accent-600]">X</a>
      <a href={links.linkedin} class="hover:text-[--color-accent-600]">LinkedIn</a>
    </div>
  </div>
