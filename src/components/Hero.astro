---
export interface Props {
  meta: {
    name: string;
    headline: string;
    subhead: string;
    avatar: string;
    badges: string[];
    cta: { label: string; href: string };
    links?: { github?: string; linkedin?: string; medium?: string; x?: string };
  };
  lang?: 'en' | 'pt';
  toggleUrl?: string;
}
const { meta, lang = 'en', toggleUrl = '#' } = Astro.props as Props;
---

<header class="sticky top-0 z-40 backdrop-blur border-b border-slate-200/50 dark:border-slate-800/80 bg-white/60 dark:bg-slate-950/60">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 group">
      <img src="/favicon.svg" alt="Logo" class="h-8 w-8 rounded-lg shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)] transition-transform duration-150 ease-out group-hover:scale-105 group-hover:brightness-110" />
      <span class="tracking-tight font-semibold text-base sm:text-lg">{meta.name}</span>
    </a>
    <nav class="hidden sm:flex items-center gap-1">
      <a href="#projects" class="px-3 py-2 rounded-md text-sm hover:bg-slate-100 dark:hover:bg-slate-800">{lang === 'en' ? 'Projects' : 'Projetos'}</a>
      <a href="#articles" class="px-3 py-2 rounded-md text-sm hover:bg-slate-100 dark:hover:bg-slate-800">{lang === 'en' ? 'Articles' : 'Artigos'}</a>
      <a href="#contact" class="px-3 py-2 rounded-md text-sm hover:bg-slate-100 dark:hover:bg-slate-800">{lang === 'en' ? 'Contact' : 'Contato'}</a>
    </nav>
    <div class="flex items-center gap-2">
      <a href={toggleUrl} aria-label={lang === 'en' ? 'Switch to Portuguese' : 'Mudar para InglÃªs'} class="px-2 py-1 rounded-md text-xs border border-slate-200 dark:border-slate-800 hover:bg-slate-100 dark:hover:bg-slate-800 inline-flex items-center gap-1">
        {lang === 'en' ? (<>
          <span>PT</span><span>ðŸ‡§ðŸ‡·</span>
        </>) : (<>
          <span>EN</span><span>ðŸ‡¬ðŸ‡§</span>
        </>)}
      </a>
      <div class="hidden sm:flex items-center gap-2 ml-1">
        {meta.links?.github && (
          <a href={meta.links.github} target="_blank" rel="noopener" aria-label="GitHub" title="GitHub" class="px-2.5 py-1.5 rounded-md bg-[--color-accent-600] text-white hover:bg-[--color-accent-500]">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-4 w-4" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.009-.866-.013-1.7-2.782.605-3.369-1.34-3.369-1.34-.454-1.155-1.11-1.463-1.11-1.463-.908-.62.069-.607.069-.607 1.004.07 1.532 1.032 1.532 1.032.892 1.53 2.341 1.088 2.91.833.091-.647.35-1.088.636-1.339-2.22-.252-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.27.098-2.647 0 0 .84-.27 2.75 1.027A9.564 9.564 0 0 1 12 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.748-1.027 2.748-1.027.546 1.377.202 2.394.1 2.647.64.7 1.027 1.595 1.027 2.688 0 3.848-2.338 4.696-4.566 4.944.359.31.678.92.678 1.855 0 1.338-.012 2.419-.012 2.749 0 .268.18.58.688.481A10.019 10.019 0 0 0 22 12.017C22 6.484 17.523 2 12 2Z" clip-rule="evenodd"/></svg>
          </a>
        )}
        {meta.links?.linkedin && (
          <a href={meta.links.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn" title="LinkedIn" class="px-2.5 py-1.5 rounded-md bg-[--color-accent-600] text-white hover:bg-[--color-accent-500]">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-4 w-4" fill="currentColor" aria-hidden="true"><path d="M20.451 20.451h-3.554v-5.569c0-1.328-.024-3.037-1.852-3.037-1.853 0-2.135 1.447-2.135 2.943v5.663H9.356V9h3.414v1.561h.049c.476-.9 1.637-1.85 3.37-1.85 3.603 0 4.269 2.371 4.269 5.455v6.285zM5.337 7.433a2.062 2.062 0 1 1 0-4.124 2.062 2.062 0 0 1 0 4.124zM7.114 20.451H3.558V9h3.556v11.451zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.226.792 24 1.771 24h20.451C23.2 24 24 23.226 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        )}
        {meta.links?.medium && (
          <a href={meta.links.medium} target="_blank" rel="noopener" aria-label="Medium" title="Medium" class="px-2.5 py-1.5 rounded-md bg-[--color-accent-600] text-white hover:bg-[--color-accent-500]">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-4 w-4" fill="currentColor" aria-hidden="true"><path d="M2.846 6.36a.73.73 0 0 0-.232-.624L1.063 4.157V3.9h4.868l3.763 8.257L12.8 3.9h4.596v.257l-1.244 1.193a.45.45 0 0 0-.17.433v9.463a.45.45 0 0 0 .17.433l1.213 1.193v.257H12.19v-.257l1.257-1.223c.124-.124.124-.161.124-.344V7.873l-3.494 8.876h-.473L5.3 7.873v5.953c-.034.247.049.498.228.67l1.635 1.984v.257H1v-.257l1.635-1.984a.72.72 0 0 0 .211-.67V6.36z"/></svg>
          </a>
        )}
      </div>
      <a href={meta.cta.href} class="hidden sm:inline-flex items-center gap-2 px-3 py-2 rounded-md text-sm font-medium bg-[--color-accent-600] text-white hover:bg-[--color-accent-500] shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)]">
        {meta.cta.label}
      </a>
    </div>
  </div>
</header>

<section class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10 opacity-20 dark:opacity-30" aria-hidden="true">
    <div class="absolute -top-24 -right-16 h-64 w-64 rounded-full bg-[--color-accent-300] blur-3xl"></div>
    <div class="absolute top-32 -left-16 h-64 w-64 rounded-full bg-[--color-accent-200] blur-3xl"></div>
  </div>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16 sm:py-24 grid md:grid-cols-3 gap-10 items-center">
    <div class="md:col-span-2 space-y-6">
      <div class="inline-flex items-center gap-2 px-2.5 py-1.5 rounded-full text-xs bg-slate-100 dark:bg-slate-800 border border-slate-200/70 dark:border-slate-700/60">
        <span class="inline-flex h-2 w-2 rounded-full bg-[--color-accent-500]"></span>
        <span>{lang === 'en' ? 'Available for interesting work' : 'DisponÃ­vel para trabalhos interessantes'}</span>
      </div>
      <h1 class="text-5xl sm:text-6xl font-bold tracking-tight leading-tight">{meta.headline}</h1>
      <p class="text-slate-600 dark:text-slate-300 max-w-2xl">{meta.subhead}</p>
      <div class="flex flex-wrap items-center gap-3">
        {meta.badges.map((b) => (
          <span class="px-2.5 py-1 text-xs rounded-md bg-[--color-accent-50] text-[--color-accent-700] dark:bg-[color-mix(in_oklab,black_80%,var(--color-accent-900))] dark:text-[--color-accent-200] border border-[color-mix(in_oklab,white_50%,var(--color-accent-200))]" >{b}</span>
        ))}
      </div>
      <div class="flex items-center gap-3 pt-3">
        <a href={meta.cta.href} class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-[--color-accent-600] text-white hover:bg-[--color-accent-500] shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)]">
          {meta.cta.label}
        </a>
        <a href="#projects" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-800 hover:bg-slate-50 dark:hover:bg-slate-900">{lang === 'en' ? 'See projects' : 'Ver projetos'}</a>
      </div>
    </div>
    <div class="md:col-span-1 flex md:justify-end">
      <img src={meta.avatar} alt="Avatar" class="h-36 w-36 sm:h-44 sm:w-44 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)] object-cover" />
    </div>
  </div>
</section>
