---
export interface ProjectFrontmatter {
  title: string;
  description: string;
  title_pt?: string;
  description_pt?: string;
  image: string;
  href: string;
  tags: string[];
  highlight?: string;
  date?: string | Date;
  readTime?: string;
}
// Items come from Astro.glob('../content/projects/*.mdx')
const { items, lang = 'en' } = Astro.props as { items: Array<{ url?: string; frontmatter: ProjectFrontmatter }>; lang?: 'en' | 'pt' };

const locale = lang === 'pt' ? 'pt-BR' : 'en-US';
const formatDate = (d: string | Date | undefined) => {
  const dt = d ? new Date(d) : new Date('2025-12-01');
  if (Number.isNaN(dt.getTime())) return String(d);
  return dt.toLocaleDateString(locale, { day: 'numeric', month: 'short', year: 'numeric' });
};
---
<section id="projects" class="max-w-6xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
  <div class="mb-8 text-center">
    <h2 class="text-4xl sm:text-5xl font-bold tracking-tight">
      {lang === 'en' ? 'Projects' : 'Projetos'}
    </h2>
    <p class="mt-2 text-base sm:text-lg text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
      {lang === 'en' ? 'A collection of my recent work showcasing diverse web applications and innovative solutions.' : 'Uma coleção de meu trabalho recente mostrando aplicações web diversificadas e soluções inovadoras.'}
    </p>
  </div>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {items.map((p) => (
      <a
        href={p.url ?? p.frontmatter.href}
        target={p.url ? undefined : '_blank'}
        class="group block rounded-xl border border-slate-200 dark:border-slate-800 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 overflow-hidden hover:border-[--color-accent-300] hover:shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)] transition"
        data-analytics-event="project_click"
        data-analytics-params={JSON.stringify({
          title: p.frontmatter.title,
          href: p.url ?? p.frontmatter.href,
          lang,
        })}
      >
        <div class="aspect-video bg-slate-200 dark:bg-slate-700 overflow-hidden">
          <img
            src={p.frontmatter.image}
            alt=""
            class="h-full w-full object-cover group-hover:scale-[1.03] transition"
            loading="lazy"
            decoding="async"
            referrerpolicy="no-referrer"
            onerror="this.onerror=null;this.src='https://images.unsplash.com/photo-1522199755839-a2bacb67c546?q=80&w=1200&auto=format&fit=crop';"
          />
        </div>
        <div class="p-4 space-y-2">
          <div class="flex items-center gap-3">
            <h3 class="font-semibold">{lang === 'pt' ? (p.frontmatter.title_pt ?? p.frontmatter.title) : p.frontmatter.title}</h3>
          </div>
          <p class="text-sm text-slate-600 dark:text-slate-300 line-clamp-2">{lang === 'pt' ? (p.frontmatter.description_pt ?? p.frontmatter.description) : p.frontmatter.description}</p>
          <div class="flex flex-wrap gap-2 pt-1">
            {(p.frontmatter.tags ?? []).map((t) => (
              <span class="text-xs px-2.5 py-1 rounded-full bg-slate-200 text-slate-800 border border-slate-300 dark:bg-slate-700 dark:text-slate-100 dark:border-slate-600">
                {t}
              </span>
            ))}
          </div>
        </div>
      </a>
    ))}
  </div>
</section>
