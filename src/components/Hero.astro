---
export interface Props {
  meta: {
    name: string;
    headline: string;
    subhead: string;
    avatar: string;
    badges: string[];
    cta: { label: string; href: string };
  };
}
const { meta } = Astro.props as Props;
---
<header class="sticky top-0 z-40 backdrop-blur border-b border-slate-200/50 dark:border-slate-800/80 bg-white/60 dark:bg-slate-950/60">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-3 flex items-center justify-between">
    <a href="#" class="flex items-center gap-3 group">
      <span class="inline-flex h-8 w-8 items-center justify-center rounded-lg bg-[--color-accent-600] text-white shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)]">{}</span>
      <span class="font-semibold tracking-tight">{meta.name}</span>
    </a>
    <nav class="hidden sm:flex items-center gap-1">
      <a href="#projects" class="px-3 py-2 rounded-md text-sm hover:bg-slate-100 dark:hover:bg-slate-800">Projects</a>
      <a href="#articles" class="px-3 py-2 rounded-md text-sm hover:bg-slate-100 dark:hover:bg-slate-800">Articles</a>
      <a href="#contact" class="px-3 py-2 rounded-md text-sm hover:bg-slate-100 dark:hover:bg-slate-800">Contact</a>
    </nav>
    <div class="flex items-center gap-2">
      <a href={meta.cta.href} class="hidden sm:inline-flex items-center gap-2 px-3 py-2 rounded-md text-sm font-medium bg-[--color-accent-600] text-white hover:bg-[--color-accent-500] shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)]">
        {meta.cta.label}
      </a>
    </div>
  </div>
</header>

<section class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10 opacity-20 dark:opacity-30" aria-hidden="true">
    <div class="absolute -top-24 -right-16 h-64 w-64 rounded-full bg-[--color-accent-300] blur-3xl"></div>
    <div class="absolute top-32 -left-16 h-64 w-64 rounded-full bg-[--color-accent-200] blur-3xl"></div>
  </div>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16 sm:py-24 grid md:grid-cols-3 gap-10 items-center">
    <div class="md:col-span-2 space-y-6">
      <div class="inline-flex items-center gap-2 px-2.5 py-1.5 rounded-full text-xs bg-slate-100 dark:bg-slate-800 border border-slate-200/70 dark:border-slate-700/60">
        <span class="inline-flex h-2 w-2 rounded-full bg-[--color-accent-500]"></span>
        <span>Available for interesting work</span>
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight leading-tight">{meta.headline}</h1>
      <p class="text-slate-600 dark:text-slate-300 max-w-2xl">{meta.subhead}</p>
      <div class="flex flex-wrap items-center gap-3">
        {meta.badges.map((b) => (
          <span class="px-2.5 py-1 text-xs rounded-md bg-[--color-accent-50] text-[--color-accent-700] dark:bg-[color-mix(in_oklab,black_80%,var(--color-accent-900))] dark:text-[--color-accent-200] border border-[color-mix(in_oklab,white_50%,var(--color-accent-200))]" >{b}</span>
        ))}
      </div>
      <div class="flex items-center gap-3 pt-3">
        <a href={meta.cta.href} class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-[--color-accent-600] text-white hover:bg-[--color-accent-500] shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)]">
          {meta.cta.label}
        </a>
        <a href="#projects" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-800 hover:bg-slate-50 dark:hover:bg-slate-900">See projects</a>
      </div>
    </div>
    <div class="md:col-span-1 flex md:justify-end">
      <img src={meta.avatar} alt="Avatar" class="h-36 w-36 sm:h-44 sm:w-44 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-[0_10px_30px_-10px_rgba(99,102,241,.25)] object-cover" />
    </div>
  </div>
</section>
